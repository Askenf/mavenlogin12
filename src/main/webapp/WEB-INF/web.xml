<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Demo</servlet-name>
        <servlet-class>com.wx.web.Demo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Demo</servlet-name>
        <url-pattern>/Demo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>com.wx.web.download</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/down</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.wx.web.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--根据ID获取商品信息-->
    <servlet>
        <servlet-name>getCommodityById</servlet-name>
        <servlet-class>com.wx.web.goods.getCommodityById</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCommodityById</servlet-name>
        <url-pattern>/getCommodityById</url-pattern>
    </servlet-mapping>
    <!--根据类型获取商品信息-->
    <servlet>
        <servlet-name>getCommodityByType</servlet-name>
        <servlet-class>com.wx.web.goods.GetCommodityByType</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCommodityByType</servlet-name>
        <url-pattern>/getCommodityByType</url-pattern>
    </servlet-mapping>

    <!--根据类型获取商品信息列表-->
    <servlet>
        <servlet-name>getCommodityList</servlet-name>
        <servlet-class>com.wx.web.goods.GetCommodityList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCommodityList</servlet-name>
        <url-pattern>/getCommodityList</url-pattern>
    </servlet-mapping>

    <!--根据用户id获取地址列表-->
    <servlet>
        <servlet-name>getAddressListByUserId</servlet-name>
        <servlet-class>com.wx.web.address.getAddressByUserId</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAddressListByUserId</servlet-name>
        <url-pattern>/getAddressListByUserId</url-pattern>
    </servlet-mapping>
</web-app>
